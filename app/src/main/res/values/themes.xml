<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KH_StudyProjects_WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item> 휴대폰 상단 색상상태바 색상
        <item name="android:windowLightStatusBar">true</item>   <!-- 휴대폰 상단 상태바 아이콘(true: 검정 / false: 흰색) -->
        <item name="android:windowTranslucentStatus">true</item> <!-- 상태바 투명도 활성화 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item> <!-- 시스템 바 배경을 그리도록 설정 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item> <!-- 노치 디스플레이 지원 -->
        <item name="android:windowBackground">@color/status_bar_color</item> <!-- 윈도우 배경색 -->
        <item name="android:forceDarkAllowed">false</item> <!-- 강제 다크모드 방지 -->
