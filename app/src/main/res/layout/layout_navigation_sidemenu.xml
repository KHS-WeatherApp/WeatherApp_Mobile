<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/weather"
    android:fitsSystemWindows="true">

    <!-- 헤더 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:background="@color/weather">

        <!-- 앱 로고 또는 아이콘 -->
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/weather_icon_sun"
            android:contentDescription="앱 로고" />

        <!-- 앱 이름 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="날씨 앱"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_5" />

        <!-- 앱 버전 또는 부제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Weather App"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            android:alpha="0.8"
            android:layout_marginBottom="@dimen/dp_16" />

        <!-- 앱 정보 버튼 -->
        <LinearLayout
            android:id="@+id/llAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8"
            android:background="@drawable/sh_day_btn_radius_01"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/dp_0">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="@android:color/white"
                android:layout_marginEnd="@dimen/dp_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="앱 정보"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:alpha="0.3"
        android:layout_marginHorizontal="@dimen/dp_16" />

    <!-- 현재 위치 아이템 -->
    <LinearLayout
        android:id="@+id/llCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8">

        <!-- 위치 아이콘 -->
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_menu_mylocation"
            android:tint="@android:color/white"
            android:layout_marginEnd="@dimen/dp_12" />

                 <!-- 지역 정보 -->
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="vertical"
             android:layout_gravity="center_vertical">

             <!-- 지역 이름 -->
             <TextView
                 android:id="@+id/tvCurrentLocationName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="현재 위치"
                 android:textColor="@android:color/white"
                 android:textSize="@dimen/sp_16"
                 android:textStyle="bold" />

             <!-- 상세 주소 -->
             <TextView
                 android:id="@+id/tvCurrentLocationAddress"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="위치 확인 중..."
                 android:textColor="@android:color/white"
                 android:textSize="@dimen/sp_12"
                 android:alpha="0.8"
                 android:layout_marginTop="@dimen/dp_2" />
         </LinearLayout>

         <!-- 날씨 정보 (오른쪽 끝) -->
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_vertical"
             android:layout_marginStart="@dimen/dp_8">

             <!-- 날씨 아이콘 -->
             <ImageView
                 android:id="@+id/ivCurrentWeatherIcon"
                 android:layout_width="@dimen/dp_32"
                 android:layout_height="@dimen/dp_32"
                 android:layout_gravity="center_vertical"
                 android:src="@drawable/weather_icon_sun"
                 android:layout_marginEnd="@dimen/dp_8" />

             <!-- 온도 -->
             <TextView
                 android:id="@+id/tvCurrentTemperature"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:text="23°"
                 android:textColor="@android:color/white"
                 android:textSize="@dimen/sp_18"
                 android:textStyle="bold" />

         </LinearLayout>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:alpha="0.3"
        android:layout_marginHorizontal="@dimen/dp_16" />



    <!-- 본문 영역: 즐겨찾기 + 검색창 오버레이 -->
    <FrameLayout
        android:id="@+id/flSideMenuBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 즐겨찾기 영역(헤더 + 리스트) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 즐겨찾기 지역 제목과 편집 버튼 -->
            <LinearLayout
                android:id="@+id/llFavoriteHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginVertical="@dimen/dp_8"
                android:animateLayoutChanges="true">

                <!-- 즐겨찾기 지역 제목 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="즐겨찾기 지역"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <!-- 편집 버튼 -->
                <LinearLayout
                    android:id="@+id/llEditFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_4"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_gravity="center_vertical"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/dp_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="편집"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

            <!-- 즐겨찾기 지역 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFavoriteLocations"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>

        <!-- 검색창 영역 (오버레이) -->
        <LinearLayout
            android:id="@+id/llSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/dp_16"
            android:background="@drawable/sh_side_round_s_t_lr_01"
            android:minHeight="60dp"
            android:layout_marginBottom="0dp"
            android:animateLayoutChanges="true"
            android:stateListAnimator="@null"
            android:clipToPadding="false">

            <!-- 드래그 핸들 -->
            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/sh_nav_drag_handle"
                android:alpha="0.5" />

            <!-- 검색창 -->
            <LinearLayout
                android:id="@+id/llSearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_8"
                android:background="@drawable/sh_nav_search_bg"
                android:clickable="true"
                android:focusable="true">

                <!-- 검색 아이콘 -->
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="@android:color/darker_gray" />

                <!-- 검색 입력창 -->
                <EditText
                    android:id="@+id/etSearchLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="위치 검색 및 추가"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_14"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:singleLine="true" />

                <!-- X 버튼 (초기에는 숨김) -->
                <ImageView
                    android:id="@+id/ivClearSearch"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@android:color/darker_gray"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- 검색 결과 영역 (확장 시에만 표시) -->
            <LinearLayout
                android:id="@+id/llSearchResultsContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <!-- 검색 결과 RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <!-- 바텀 네비게이션과의 간격을 위한 여백 -->
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/dp_16"-->
<!--                android:background="@android:color/transparent" />-->

        </LinearLayout>
    </FrameLayout>
</LinearLayout>